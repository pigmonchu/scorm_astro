---
export interface Props {
  src: string; // Ruta del video
  type?: string; // Tipo del video (opcional, por defecto 'video/mp4')
}

// Recuperamos las propiedades pasadas al componente
const { src, type = 'video/mp4' } = Astro.props;
const videoSrc = `/${src}`; // Construye la ruta final sin "public/"
---
<video controls>
  <source src={videoSrc} type={type} />
  Tu navegador no soporta video.
</video>